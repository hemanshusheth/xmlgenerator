<Window x:Class="XmlGenerator.PopUp.ErrorPop"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="Error" Height="150" Width="400" FontFamily="Candara">
    <Grid>
        <Border Padding="2" Background="Ivory" 
          BorderBrush="Black" BorderThickness="2" CornerRadius="3">
            <TextBlock Name="errorTextBlock" Foreground="Red" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Error" FontFamily="Candara"/>
        </Border>
        <Button Width="60" Height="25" Margin="300,75,10,10" IsDefault="False" Content="OK" IsCancel="True" Background="Transparent"></Button>
    </Grid>
</Window>
